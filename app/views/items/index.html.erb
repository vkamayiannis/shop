<h1>Listing items</h1>
<form method="get">
 <legend>Search</legend>
 <input type = 'text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword'>
</form>
<table class="table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Code</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.uploaded_file.url(:thumb), size: "100x100", :class => 'img-rounded' %></td>
        <td class="col-md-2"><%= item.code %></td>
        <td class="col-md-5"><%= item.description %></td>
        <td class="col-md-1"><%= item.price %></td>
        <td class="col-md-2"><%= link_to item.category.descr, items_path(category_id: item.category_id) if item.category_id.present? %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @books, :style => 'color:blue' %>
<br>
<%= link_to new_item_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Item
<% end %>
<br>
